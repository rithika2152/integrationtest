{
  "compilerOptions": {
    "target": "es2020",  // Or a similar modern target
    "moduleResolution": "node",
    "module": "esnext",
    "esModuleInterop": true,
    "types": ["@ffmpeg/ffmpeg"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx", // If you're using React
    "lib": ["dom", "es2020"]
  },
  "include": ["src/**/*"], // or wherever your source files are
  "exclude": ["node_modules"]
}